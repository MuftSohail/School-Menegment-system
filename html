                            <input type="number" class="form-control" id="teacherSalary" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">منسوخ کریں</button>
                    <button type="button" class="btn btn-primary" id="saveTeacherBtn">محفوظ کریں</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Student Modal -->
    <div class="modal fade" id="addStudentModal" tabindex="-1" aria-labelledby="addStudentModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addStudentModalLabel">نیا طالب علم شامل کریں</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addStudentForm">
                        <div class="mb-3">
                            <label for="studentName" class="form-label">نام</label>
                            <input type="text" class="form-control" id="studentName" required>
                        </div>
                        <div class="mb-3">
                            <label for="studentClass" class="form-label">کلاس</label>
                            <select class="form-select" id="studentClass" required>
                                <option value="">کلاس منتخب کریں</option>
                                <option value="نرسری">نرسری</option>
                                <option value="کے جی">کے جی</option>
                                <option value="پہلی">پہلی</option>
                                <option value="دوسری">دوسری</option>
                                <option value="تیسری">تیسری</option>
                                <option value="چوتھی">چوتھی</option>
                                <option value="پانچویں">پانچویں</option>
                                <option value="چھٹی">چھٹی</option>
                                <option value="ساتویں">ساتویں</option>
                                <option value="آٹھویں">آٹھویں</option>
                                <option value="نویں">نویں</option>
                                <option value="دسویں">دسویں</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="studentRollNumber" class="form-label">رول نمبر</label>
                            <input type="number" class="form-control" id="studentRollNumber" required>
                        </div>
                        <div class="mb-3">
                            <label for="studentParentPhone" class="form-label">والدین کا فون نمبر</label>
                            <input type="tel" class="form-control" id="studentParentPhone" required>
                        </div>
                        <div class="mb-3">
                            <label for="studentFee" class="form-label">ماہانہ فیس</label>
                            <input type="number" class="form-control" id="studentFee" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">منسوخ کریں</button>
                    <button type="button" class="btn btn-primary" id="saveStudentBtn">محفوظ کریں</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Data storage
        let teachers = JSON.parse(localStorage.getItem('teachers')) || [];
        let students = JSON.parse(localStorage.getItem('students')) || [];
        let results = JSON.parse(localStorage.getItem('results')) || [];
        let fees = JSON.parse(localStorage.getItem('fees')) || [];
        let certificates = JSON.parse(localStorage.getItem('certificates')) || [];
        let activities = JSON.parse(localStorage.getItem('activities')) || [];

        // DOM elements
        const loginForm = document.getElementById('loginForm');
        const logoutBtn = document.getElementById('logoutBtn');
        const loginPage = document.getElementById('loginPage');
        const dashboard = document.getElementById('dashboard');
        
        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            // Check if user is already logged in
            if (localStorage.getItem('isLoggedIn') === 'true') {
                loginPage.style.display = 'none';
                dashboard.style.display = 'block';
            }
            
            // Load initial data
            updateDashboard();
            loadTeachersTable();
            loadStudentsTable();
            populateStudentDropdowns();
            loadFeeRecords();
            
            // Add event listeners
            loginForm.addEventListener('submit', handleLogin);
            logoutBtn.addEventListener('click', handleLogout);
            document.getElementById('saveTeacherBtn').addEventListener('click', addTeacher);
            document.getElementById('saveStudentBtn').addEventListener('click', addStudent);
            document.getElementById('addResultForm').addEventListener('submit', addResult);
            document.getElementById('marksheetStudentSelect').addEventListener('change', loadStudentMarks);
            document.getElementById('addFeeForm').addEventListener('submit', addFee);
            document.getElementById('generateCertificateForm').addEventListener('submit', generateCertificate);
            document.getElementById('printCertificateBtn').addEventListener('click', printCertificate);
            document.getElementById('printResultBtn').addEventListener('click', printResultCard);
            
            // Update student dropdown when students tab is shown
            document.getElementById('students-tab').addEventListener('click', function() {
                populateStudentDropdowns();
            });
        });

        // Login functionality
        function handleLogin(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            // Demo login - in real application, verify with server
            if (username === 'admin' && password === 'password') {
                localStorage.setItem('isLoggedIn', 'true');
                loginPage.style.display = 'none';
                dashboard.style.display = 'block';
                
                // Add login activity
                addActivity('سسٹم میں لاگ ان کیا گیا');
            } else {
                alert('غلط صارف نام یا پاس ورڈ!');
            }
        }
        
        // Logout functionality
        function handleLogout() {
            localStorage.setItem('isLoggedIn', 'false');
            loginPage.style.display = 'block';
            dashboard.style.display = 'none';
            document.getElementById('loginForm').reset();
            
            // Add logout activity
            addActivity('سسٹم سے لاگ آؤٹ کیا گیا');
        }
        
        // Add a new teacher
        function addTeacher() {
            const name = document.getElementById('teacherName').value;
            const subject = document.getElementById('teacherSubject').value;
            const email = document.getElementById('teacherEmail').value;
            const phone = document.getElementById('teacherPhone').value;
            const salary = document.getElementById('teacherSalary').value;
            
            if (name && subject && phone && salary) {
                const newTeacher = {
                    id: Date.now(),
                    name,
                    subject,
                    email,
                    phone,
                    salary
                };
                
                teachers.push(newTeacher);
                localStorage.setItem('teachers', JSON.stringify(teachers));
                
                // Close modal and reset form
                bootstrap.Modal.getInstance(document.getElementById('addTeacherModal')).hide();
                document.getElementById('addTeacherForm').reset();
                
                // Update UI
                loadTeachersTable();
                updateDashboard();
                
                // Add activity
                addActivity(`نیا استاد شامل کیا گیا: ${name}`);
            } else {
                alert('براہ کرم تمام ضروری فیلڈز بھریں');
            }
        }
        
        // Add a new student
        function addStudent() {
            const name = document.getElementById('studentName').value;
            const studentClass = document.getElementById('studentClass').value;
            const rollNumber = document.getElementById('studentRollNumber').value;
            const parentPhone = document.getElementById('studentParentPhone').value;
            const fee = document.getElementById('studentFee').value;
            
            if (name && studentClass && rollNumber && parentPhone && fee) {
                const newStudent = {
                    id: Date.now(),
                    name,
                    class: studentClass,
                    rollNumber,
                    parentPhone,
                    fee
                };
                
                students.push(newStudent);
                localStorage.setItem('students', JSON.stringify(students));
                
                // Close modal and reset form
                bootstrap.Modal.getInstance(document.getElementById('addStudentModal')).hide();
                document.getElementById('addStudentForm').reset();
                
                // Update UI
                loadStudentsTable();
                updateDashboard();
                populateStudentDropdowns();
                
                // Add activity
                addActivity(`نیا طالب علم شامل کیا گیا: ${name}`);
            } else {
                alert('براہ کرم تمام ضروری فیلڈز بھریں');
            }
        }
        
        // Add a result
        function addResult(e) {
            e.preventDefault();
            
            const studentId = document.getElementById('resultStudentSelect').value;
            const subject = document.getElementById('resultSubject').value;
            const marks = document.getElementById('resultMarks').value;
            const term = document.getElementById('resultTerm').value;
            
            if (studentId && subject && marks && term) {
                const newResult = {
                    id: Date.now(),
                    studentId: parseInt(studentId),
                    subject,
                    marks: parseInt(marks),
                    term
                };
                
                results.push(newResult);
                localStorage.setItem('results', JSON.stringify(results));
                
                // Reset form
                document.getElementById('addResultForm').reset();
                
                // Add activity
                const student = students.find(s => s.id === parseInt(studentId));
                addActivity(`${student.name} کے ${subject} کے نمبرات شامل کیے گئے: ${marks}`);
                
                alert('نمبرات کامیابی سے محفوظ ہو گئے ہیں');
            } else {
                alert('براہ کرم تمام فیلڈز بھریں');
            }
        }
        
        // Add a fee record
        function addFee(e) {
            e.preventDefault();
            
            const studentId = document.getElementById('feeStudentSelect').value;
            const month = document.getElementById('feeMonth').value;
            const amount = document.getElementById('feeAmount').value;
            const date = document.getElementById('feeDate').value;
            
            if (studentId && month && amount && date) {
                const newFee = {
                    id: Date.now(),
                    studentId: parseInt(studentId),
                    month,
                    amount: parseFloat(amount),
                    date,
                    status: 'ادا شدہ'
                };
                
                fees.push(newFee);
                localStorage.setItem('fees', JSON.stringify(fees));
                
                // Reset form
                document.getElementById('addFeeForm').reset();
                
                // Update UI
                loadFeeRecords();
                updateDashboard();
                
                // Add activity
                const student = students.find(s => s.id === parseInt(studentId));
                addActivity(`${student.name} کی فیس وصول کی گئی: ${amount} روپے`);
                
                alert('فیس ریکارڈ کامیابی سے محفوظ ہو گیا ہے');
            } else {
                alert('براہ کرم تمام فیلڈز بھریں');
            }
        }
        
        // Generate certificate
        function generateCertificate(e) {
            e.preventDefault();
            
            const studentId = document.getElementById('certificateStudentSelect').value;
            const type = document.getElementById('certificateType').value;
            const date = document.getElementById('certificateDate').value;
            const description = document.getElementById('certificateDescription').value;
            
            if (studentId && type && date) {
                const newCertificate = {
                    id: Date.now(),
                    studentId: parseInt(studentId),
                    type,
                    date,
                    description
                };
                
                certificates.push(newCertificate);
                localStorage.setItem('certificates', JSON.stringify(certificates));
                
                // Update certificate preview
                const student = students.find(s => s.id === parseInt(studentId));
                document.getElementById('previewStudentName').textContent = student.name;
                document.getElementById('previewTitle').textContent = `سندِ ${type}`;
                document.getElementById('previewDescription').textContent = description || `نے اسکول میں نمایاں کارکردگی کا مظاہرہ کیا ہے`;
                
                const dateObj = new Date(date);
                document.getElementById('previewDate').textContent = dateObj.toLocaleDateString('ur-PK', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
                
                // Add activity
                addActivity(`${student.name} کے لیے ${type} سرٹیفیکیٹ بنایا گیا`);
                
                alert('سرٹیفیکیٹ کامیابی سے تیار ہو گیا ہے');
            } else {
                alert('براہ کرم تمام ضروری فیلڈز بھریں');
            }
        }
        
        // Print certificate
        function printCertificate() {
            const printContent = document.getElementById('certificatePreview').innerHTML;
            const originalContent = document.body.innerHTML;
            
            document.body.innerHTML = printContent;
            window.print();
            document.body.innerHTML = originalContent;
            
            // Reload the page to restore functionality
            location.reload();
        }
        
        // Print result card
        function printResultCard() {
            const studentId = document.getElementById('marksheetStudentSelect').value;
            
            if (!studentId) {
                alert('براہ کرم پہلے طالب علم منتخب کریں');
                return;
            }
            
            const printContent = document.getElementById('marksTableBody').innerHTML;
            const originalContent = document.body.innerHTML;
            
            document.body.innerHTML = `
                <div class="container mt-5">
                    <h2 class="text-center">رزلٹ کارڈ</h2>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>نام</th>
                                <th>ریاضی</th>
                                <th>انگریزی</th>
                                <th>سائنس</th>
                                <th>کل نمبر</th>
                                <th>فیصد</th>
                                <th>گریڈ</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${printContent}
                        </tbody>
                    </table>
                </div>
            `;
            
            window.print();
            document.body.innerHTML = originalContent;
            
            // Reload the page to restore functionality
            location.reload();
        }
        
        // Load teachers table
        function loadTeachersTable() {
            const tableBody = document.getElementById('teachersTableBody');
            tableBody.innerHTML = '';
            
            if (teachers.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="6" class="text-center">کوئی اساتذہ کا ڈیٹا موجود نہیں ہے</td></tr>';
                return;
            }
            
            teachers.forEach(teacher => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${teacher.name}</td>
                    <td>${teacher.subject}</td>
                    <td>${teacher.email || 'N/A'}</td>
                    <td>${teacher.phone}</td>
                    <td>${teacher.salary} روپے</td>
                    <td>
                        <button class="btn btn-sm btn-info"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-sm btn-danger" onclick="deleteTeacher(${teacher.id})"><i class="fas fa-trash"></i></button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        }
        
        // Load students table
        function loadStudentsTable() {
            const tableBody = document.getElementById('studentsTableBody');
            tableBody.innerHTML = '';
            
            if (students.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="6" class="text-center">کوئی طلباء کا ڈیٹا موجود نہیں ہے</td></tr>';
                return;
            }
            
            students.forEach(student => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${student.name}</td>
                    <td>${student.class}</td>
                    <td>${student.rollNumber}</td>
                    <td>${student.parentPhone}</td>
                    <td>${student.fee} روپے / ماہ</td>
                    <td>
                        <button class="btn btn-sm btn-info"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-sm btn-danger" onclick="deleteStudent(${student.id})"><i class="fas fa-trash"></i></button>
                    </td>
                `;
                tableBody.appendChild(row);
            });
        }
        
        // Load fee records
        function loadFeeRecords() {
            const tableBody = document.getElementById('feeRecordsTableBody');
            tableBody.innerHTML = '';
            
            if (fees.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="5" class="text-center">کوئی فیس ریکارڈ موجود نہیں ہے</td></tr>';
                return;
            }
            
            fees.forEach(fee => {
                const student = students.find(s => s.id === fee.studentId);
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${student ? student.name : 'N/A'}</td>
                    <td>${fee.month}</td>
                    <td>${fee.amount} روپے</td>
                    <td>${fee.date}</td>
                    <td><span class="badge bg-success">${fee.status}</span></td>
                `;
                tableBody.appendChild(row);
            });
        }
        
        // Populate student dropdowns
        function populateStudentDropdowns() {
            const dropdowns = [
                document.getElementById('resultStudentSelect'),
                document.getElementById('marksheetStudentSelect'),
                document.getElementById('feeStudentSelect'),
                document.getElementById('certificateStudentSelect')
            ];
            
            dropdowns.forEach(dropdown => {
                if (dropdown) {
                    // Clear existing options except the first one
                    while (dropdown.options.length > 1) {
                        dropdown.remove(1);
                    }
                    
                    // Add students to dropdown
                    students.forEach(student => {
                        const option = document.createElement('option');
                        option.value = student.id;
                        option.textContent = student.name;
                        dropdown.appendChild(option);
                    });
                }
            });
        }
        
        // Load student marks
        function loadStudentMarks() {
            const studentId = document.getElementById('marksheetStudentSelect').value;
            const tableBody = document.getElementById('marksTableBody');
            
            if (!studentId) {
                tableBody.innerHTML = '<tr><td colspan="7" class="text-center">براہ کرم طالب علم منتخب کریں</td></tr>';
                return;
            }
            
            const student = students.find(s => s.id === parseInt(studentId));
            const studentResults = results.filter(r => r.studentId === parseInt(studentId));
            
            if (studentResults.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="7" class="text-center">منتخب طالب علم کے کوئی نتائج موجود نہیں ہیں</td></tr>';
                return;
            }
            
            // Calculate total marks and percentage
            const mathMarks = studentResults.find(r => r.subject === 'ریاضی')?.marks || 0;
            const englishMarks = studentResults.find(r => r.subject === 'انگریزی')?.marks || 0;
            const scienceMarks = studentResults.find(r => r.subject === 'سائنس')?.marks || 0;
            const totalMarks = mathMarks + englishMarks + scienceMarks;
            const percentage = (totalMarks / 300) * 100;
            
            // Determine grade
            let grade = 'F';
            if (percentage >= 90) grade = 'A+';
            else if (percentage >= 80) grade = 'A';
            else if (percentage >= 70) grade = 'B';
            else if (percentage >= 60) grade = 'C';
            else if (percentage >= 50) grade = 'D';
            
            tableBody.innerHTML = `
                <tr>
                    <td>${student.name}</td>
                    <td>${mathMarks}</td>
                    <td>${englishMarks}</td>
                    <td>${scienceMarks}</td>
                    <td>${totalMarks}</td>
                    <td>${percentage.toFixed(2)}%</td>
                    <td>${grade}</td>
                </tr>
            `;
        }
        
        // Update dashboard
        function updateDashboard() {
            document.getElementById('teachersCount').textContent = teachers.length;
            document.getElementById('studentsCount').textContent = students.length;
            
            // Calculate total revenue
            const totalRevenue = fees.reduce((total, fee) => total + fee.amount, 0);
            document.getElementById('totalRevenue').textContent = `${totalRevenue} روپے`;
            
            document.getElementById('certificatesCount').textContent = certificates.length;
            
            // Load recent activities
            const activitiesList = document.getElementById('recentActivities');
            activitiesList.innerHTML = '';
            
            const recentActivities = activities.slice(-5).reverse();
            
            if (recentActivities.length === 0) {
                activitiesList.innerHTML = '<li class="list-group-item">سسٹم میں خوش آمدید! کوئی سرگرمی نہیں ہوئی ہے۔</li>';
            } else {
                recentActivities.forEach(activity => {
                    const li = document.createElement('li');
                    li.className = 'list-group-item';
                    li.textContent = activity;
                    activitiesList.appendChild(li);
                });
            }
        }
        
        // Add activity
        function addActivity(activity) {
            const timestamp = new Date().toLocaleString('ur-PK', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
            
            activities.push(`${timestamp} - ${activity}`);
            localStorage.setItem('activities', JSON.stringify(activities));
            
            updateDashboard();
        }
        
        // Delete teacher
        function deleteTeacher(id) {
            if (confirm('کیا آپ واقعی یہ استاد حذف کرنا چاہتے ہیں؟')) {
                teachers = teachers.filter(teacher => teacher.id !== id);
                localStorage.setItem('teachers', JSON.stringify(teachers));
                loadTeachersTable();
                updateDashboard();
                
                addActivity('ایک استاد حذف کیا گیا');
            }
        }
        
        // Delete student
        function deleteStudent(id) {
            if (confirm('کیا آپ واقعی یہ طالب علم حذف کرنا چاہتے ہیں؟')) {
                students = students.filter(student => student.id !== id);
                localStorage.setItem('students', JSON.stringify(students));
                loadStudentsTable();
                updateDashboard();
                populateStudentDropdowns();
                
                addActivity('ایک طالب علم حذف کیا گیا');
            }
        }
    </script>
</body>
</html>
